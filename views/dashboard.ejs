<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>MMLA Live Dashboard - Session <%=sessionKey%></title>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/app-styles.css">
  <link rel="stylesheet" href="/css/materialize.css">
</head>
<body>

<p id="session-key" style="display:none"><%=sessionKey%></p>
<p id="secret" style="display:none"><%=secret%></p>

<div class="card">
  <div class="header">
    <i class="material-icons">speed</i>
    <h2>Dashboard - Session <%=sessionKey%></h2>
    <h2 id="direct-link" style="display:none"><%=url%></h2>
  </div>
  <body>
  <div class="container-fluid">

    <!-- Widgets -->
    <div class="row">
      <div class="col-lg-6 col-md-6 col-sm-6">
        <div class="info-box bg-pink hover-expand-effect" style="margin-bottom: 0.4em;">
          <div class="icon">
            <i class="material-icons">groups</i>
          </div>
          <div class="content">
            <div class="text">Active Participants</div>
            <div id="nr-participants" class="number count-to" data-from="0" data-to="125" data-speed="15" data-fresh-interval="20">0</div>
          </div>
        </div>
      </div>

      <!-- Comment Counter Element -->

      <div class="col-lg-6 col-md-6 col-sm-6">
        <div class="info-box bg-green hover-expand-effect" style="margin-bottom: 0.4em;">
          <div class="icon">
            <i class="material-icons">comment</i>
          </div>
          <div class="content">
            <div class="text">Comments</div>
            <div id="nr-comments" class="number count-to" data-from="0" data-to="125" data-speed="15" data-fresh-interval="20">0</div>
          </div>
        </div>
      </div>

      <!-- Looking At Camera Counter Element -->

      <div class="col-lg-6 col-md-6 col-sm-6">
        <div class="info-box bg-blue hover-expand-effect" style="margin-bottom: 0.4em;">
          <div class="icon">
            <i class="material-icons">visibility</i>
          </div>
          <div class="content">
            <div class="text">Looking</div>
            <div id="nr-looking-at-camera" class="number count-to" data-from="0" data-to="125" data-speed="15" data-fresh-interval="20">0 / 0</div>
          </div>
        </div>
      </div>

      <!-- Placeholder Element -->

      <div class="col-lg-6 col-md-6 col-sm-6">
        <div class="info-box bg-blue hover-expand-effect" style="margin-bottom: 0.4em;">
          <div class="icon">
            <i class="material-icons">highlight_off</i>
          </div>
          <div class="content">
            <div class="text">Placeholder</div>
            <div id="nr-looking-at-camera" class="number count-to" data-from="0" data-to="125" data-speed="15" data-fresh-interval="20">0 / 0</div>
          </div>
        </div>
      </div>


      <!-- Emotion (happy) Counter Element -->

      <div class="col-lg-3 col-md-3 col-sm-6">
        <div class="info-box bg-yellow hover-expand-effect" style="margin-bottom: 0.4em;">
          <div class="icon">
            <i class="material-icons">sentiment_satisfied</i>
          </div>
          <div class="content">
            <div class="text">Happy</div>
            <div id="emotion-happy-participants" class="number count-to" data-from="0" data-to="125" data-speed="15" data-fresh-interval="20">0</div>
          </div>
        </div>
      </div>

      <!-- Emotion (neutral) Counter Element -->

      <div class="col-lg-3 col-md-3 col-sm-6">
        <div class="info-box bg-yellow hover-expand-effect" style="margin-bottom: 0.4em;">
          <div class="icon">
            <i class="material-icons">sentiment_neutral</i>
          </div>
          <div class="content">
            <div class="text">Neutral</div>
            <div id="emotion-neutral-participants" class="number count-to" data-from="0" data-to="125" data-speed="15" data-fresh-interval="20">0</div>
          </div>
        </div>
      </div>

      <!-- Emotion (sad) Counter Element -->

      <div class="col-lg-3 col-md-3 col-sm-6">
        <div class="info-box bg-yellow hover-expand-effect" style="margin-bottom: 0.4em;">
          <div class="icon">
            <i class="material-icons">sentiment_dissatisfied</i>
          </div>
          <div class="content">
            <div class="text">Sad</div>
            <div id="emotion-sad-participants" class="number count-to" data-from="0" data-to="125" data-speed="15" data-fresh-interval="20">0</div>
          </div>
        </div>
      </div>

      <!-- Emotion (other) Counter Element -->

      <div class="col-lg-3 col-md-3 col-sm-6">
        <div class="info-box bg-yellow hover-expand-effect" style="margin-bottom: 0.4em;">
          <div class="icon">
            <i class="material-icons">pending</i>
          </div>
          <div class="content">
            <div class="text">Other</div>
            <div id="emotion-other-participants" class="number count-to" data-from="0" data-to="125" data-speed="15" data-fresh-interval="20">0</div>
          </div>
        </div>
      </div>
    </div>
</div>

  </div>
  </div>
</body>

  </div>

  <div class="row">

    <!-- List of participants with their respective data -->

  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <div class="card">
      <div class="header">
        <i class="material-icons">groups</i>
        <h2>Participants</h2>

      </div>
      <div class="body">
        <div class="table-responsive">
          <table class="table table-hover dashboard-task-infos">
            <thead>
              <tr>
                <th>Name</th>
                <th>Emotion</th>
                <th>Objects</th>
                <th>Looking</th>
                <th>Happiness</th>
              </tr>
            </thead>
            <tbody id="participant-list">
              <!-- Participant elements will be added here by JS -->
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="card">
        <div class="header">
          <i class="material-icons">comment</i>
          <h2>Comments</h2>
        </div>
        <div class="body">
          <div class="table-responsive">
            <table class="table table-hover dashboard-task-infos">
              <thead>
                <tr>
                  <th>Comment</th>
                  <th>Timestamp</th>
                  <th>Time</th>
                </tr>
              </thead>
              <tbody id="comment-list">
                <!-- Participant elements will be added here by JS -->
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="card">
        <div class="header">
          <i class="material-icons">settings</i>
          <h2>Settings</h2>
        </div>
        <div class="body">
          <button type="button" id="link-btn" class="btn bg-teal waves-effect">
            <i class="material-icons">link</i>
            <span>Copy direct link</span>
          </button>
          <button type="button" id="key-btn" class="btn bg-teal waves-effect">
            <i class="material-icons">content_copy</i>
            <span>Copy session key</span>
          </button>
          <button type="button" id="download-btn" class="btn bg-teal waves-effect">
            <i class="material-icons">file_download</i>
            <span>Download</span>
          </button>
          <button type="button" id="end-btn" class="btn bg-teal waves-effect">
            <i class="material-icons">close</i>
            <span>End Session</span>
          </button>

        </div>
      </div>
    </div>
  </div>

  <script src="/dashboard.js" charset="utf-8"></script>
</body>

</html>
